<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
			crossorigin="anonymous"
		/>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
			crossorigin="anonymous"
		></script>
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet" />
		<title>URL Shortener</title>
		<style>
			a {
				text-decoration: none;
			}
		</style>
	</head>
	<body class="bg-light d-flex flex-column h-100 p-3 align-items-center" style="font-family: Poppins">
		<div
			class="d-flex flex-column h-100 p-5 align-items-center m-1"
			style="background-color: rgba(0, 0, 0, 0.4); border-radius: 10px; max-width: 90vw"
		>
			<h1 class="mb-5">URL Shortener</h1>
			<form method="POST" action="/shortURL" class="d-flex mb-5">
				<div class="form-group">
					<input
						type="text"
						class="form-control"
						name="fullURL"
						required
						placeholder="URL"
						style="border-radius: 5px 0 0 5px !important"
					/>
				</div>
				<button type="submit" class="btn btn-primary" style="border-radius: 0 5px 5px 0 !important">
					Shrink
				</button>
			</form>
			<table class="table table-bordered table-light table-hover table-responsive">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Full Url</th>
						<th scope="col">Short URL</th>
						<th scope="col">Visits</th>
					</tr>
				</thead>
				<tbody>
					<% urls.forEach((url) => { %>
					<tr>
						<td><a href="<%=url.URLFull%>"><%=url.URLFull%></a></td>
						<td><a href="<%=url.URLShort%>"><%=url.URLShort%></a></td>
						<td><%=url.visits%></td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>
